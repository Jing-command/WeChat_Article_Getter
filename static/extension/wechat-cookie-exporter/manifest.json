{
  "manifest_version": 3,
  "name": "WeChat Token & Cookie Exporter",
  "version": "1.0.3",
  "description": "一键获取 mp.weixin.qq.com 的 token 和所有 cookies",
  "permissions": ["cookies", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://mp.weixin.qq.com/*", "https://*.qq.com/*"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "获取Token和Cookies"
  }
}
